<%layout('/layouts/boilerplate.ejs')%>
<style>
  #filters {
    display: flex;
    flex-wrap: nowrap; /* Prevents wrapping to the next line */
    align-items: center;
    overflow-x: auto; /* Enables horizontal scrolling if content overflows */
    white-space: nowrap;
    gap: 20px; /* Adds space between filters */
    padding: 10px;
  }
  
  .filter {
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    flex: 0 0 auto; /* Prevents shrinking */
  }
  
  .filter:hover {
    opacity: 1;
  }
  
  .tax-switch {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ccc;
    border-radius: 20px;
    padding: 8px 12px;
    background: #f9f9f9;
    transition: background 0.3s ease-in-out;
    white-space: nowrap;
    flex-shrink: 0; /* Prevents shrinking */
  }
  
  .tax-switch:hover {
    background: #e0e0e0;
  }
  
  .form-check-input {
    cursor: pointer;
    margin-left: 10px;
  }  
</style>
<body>
  <%=success%>
   <div id="filters">
    <div class="filter">
     <div><i class="fa-solid fa-fire"></i></div> 
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div> 
       <p>Rooms</p>
     </div>
     <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div> 
       <p>Mountain city</p>
     </div>
     <div class="filter">
       <div><i class="fa-solid fa-mountain"></i></div> 
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div> 
         <p>Castle</p>
       </div>
       <div class="filter">
         <div><i class="fa-solid fa-person-swimming"></i></div> 
          <p>Amazing Pools</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div> 
           <p>Camping</p>
         </div>
         <div class="filter">
           <div><i class="fa-solid fa-cow"></i></div> 
            <p>Farms</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div> 
             <p>Arctic</p>
           </div>
           <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div> 
             <p>Domes</p>
           </div>
           <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div> 
             <p>Houseboat</p>
           </div>
           <div class="tax-switch">
            <div class="form-check-reverse form-switch ">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
              <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
           </div>
   </div>   
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <%for(let list of lists){ %>
                <div class="card listing-card">
                   <a href="/listings/<%=list._id%>" class="listing-link"><img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem;"></a>
                    <div class="card-body">
                      <h5 class="card-title"><b><%=list.title%></b></h5>
                      <a href="/listings/<%=list._id%>" class="listing-link"><p class="card-text">
                        <%=list.description%><br>
                        &#8377;<%=list.price.toLocaleString("en-IN")%>/night 
                        <i class="tax_info"> &nbsp;&nbsp;+18% GST</i>
                      </p></a>
                      <a href="/listings/<%=list._id%>" class="btn btn-primary">Checkout</a>
                    </div>
                  </div>
                  <%}%>
        </div>

    
    
    <!-- <form method="GET" action="/listings/new">
        <button>Add Your House</button>
    </form> -->
    <script>
      let taxSwitch=document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax_info");
        for(info of taxInfo){
          if(info.style.display!="inline"){
            info.style.display="inline";
          }else{
            info.style.display="none";
          }
          
        }
    
      });
    </script>
</body>